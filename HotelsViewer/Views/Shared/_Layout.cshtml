<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


<script type="text/javascript">
    $('#filterHotelName').on('input', function (e) {
        e.preventDefault();
        var url = '@Url.Action("Filter")';
        var isready = false;
        if ($('#IsReady').is(":checked")) {
            isready = true;
        }
        $.get(url, { SearchValue: $(this).val(), SearchCriteria: $('#SearchCriteria').val(), isready }, function (result) {
            $('#HotelsListDiv').html(result);
        });
    });

    $('#IsReady').change(function () {
        var url = '@Url.Action("Filter")';
        var isready = false;
        if ($('#IsReady').is(":checked")) {
            isready = true;
        }
        $.get(url, { SearchValue: $('#filterHotelName').val(), SearchCriteria: $('#SearchCriteria').val(), isready }, function (result) {
            $('#HotelsListDiv').html(result);
        });
    });
</script>
